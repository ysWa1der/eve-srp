# Database connection
EVE_SRP_DB_URL=mysql://root:eve_srp@eve_srp_db/eve_srp
#EVE_SRP_DB_URL=postgres://postgres:eve_srp@eve_srp_db_postgres/postgres

# Database connections for unit tests
#EVE_SRP_DB_TEST_URL=sqlite:///:memory:
EVE_SRP_DB_TEST_URL=mysql://root:eve_srp@eve_srp_db/eve_srp_test
#EVE_SRP_DB_TEST_URL=postgres://postgres:eve_srp@eve_srp_db_postgres/test

# Mapping of external groups to internal global admin role, comma separated list.
# Use "global-admin" with the EsiProvider.
EVE_SRP_ROLE_GLOBAL_ADMIN=global-admin

# Provider for groups and external accounts
EVE_SRP_PROVIDER=EveSrp\Provider\Implementation\EsiProvider

# EVE SSO configuration
EVE_SRP_SSO_CLIENT_ID=
EVE_SRP_SSO_CLIENT_SECRET=
EVE_SRP_SSO_REDIRECT_URI=http://localhost:8000/auth

# Customizing, optional with default values
EVE_SRP_APP_TITLE="Ship Replacement Program"
# Logo file path (put custom logo in web/static/ directory)
# Example: EVE_SRP_APP_LOGO=/static/cloud-temple-logo.png
EVE_SRP_APP_LOGO=/static/logo-srp.png
EVE_SRP_APP_LOGO_ALT="SRP Logo"
# The user agent for ESI requests.
EVE_SRP_HTTP_USER_AGENT="EVE-SRP (https://github.com/tkhamez/eve-srp)"
EVE_SRP_ZKILLBOARD_URL=https://zkillboard.com

# How the modifiers are applied: sequentially, absolute_first or relative_first
EVE_SRP_MODIFIER_CALCULATION=sequentially

# Optional texts
# The login hint, footer text and submit details help support links in markdown format, e.g. [Text](http://domain.tdl)
# The login text and submit details placeholder support line breaks with \n.
EVE_SRP_LOGIN_HINT=""
EVE_SRP_FOOTER_TEXT=""
EVE_SRP_SUBMIT_DETAILS_PLACEHOLDER=""
EVE_SRP_SUBMIT_DETAILS_HELP=""

# App env (prod or dev). Optional, defaults to prod.
# When set to 'prod':
# - JavaScript obfuscation is enabled during build
EVE_SRP_ENV=prod

# Secure session cookie (https only). Set to 1 for production deployments using HTTPS.
# IMPORTANT: For production environments, set this to 1 to prevent session hijacking.
# When set to 1, cookies will only be transmitted over HTTPS connections.
EVE_SRP_SESSION_SECURE=0

# Require users to have at least one group to login (true or false). Optional, defaults to false.
# When enabled, users without any groups will be denied access and redirected to login page.
# Configure groups via EVE_SRP_PROVIDER_ESI_* variables below.
EVE_SRP_REQUIRE_GROUP_FOR_LOGIN=false

# Neucore provider
EVE_SRP_PROVIDER_NEUCORE_DOMAIN=https://neucore.tian-space.net
EVE_SRP_PROVIDER_NEUCORE_APP_ID=
EVE_SRP_PROVIDER_NEUCORE_APP_SECRET=

# ESI provider - Group configuration: comma separated list of EVE IDs
EVE_SRP_PROVIDER_ESI_SUBMITTER_ALLIANCES=
EVE_SRP_PROVIDER_ESI_SUBMITTER_CORPORATIONS=
EVE_SRP_PROVIDER_ESI_REVIEW_CHARACTERS=
EVE_SRP_PROVIDER_ESI_REVIEW_CORPORATIONS=
EVE_SRP_PROVIDER_ESI_PAY_CHARACTERS=
EVE_SRP_PROVIDER_ESI_PAY_CORPORATIONS=
EVE_SRP_PROVIDER_ESI_ADMIN_CHARACTERS=
EVE_SRP_PROVIDER_ESI_GLOBAL_ADMIN_CHARACTERS=
