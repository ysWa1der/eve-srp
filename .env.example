# Database Configuration
DB_ROOT_PASSWORD=change_this_root_password_123!
DB_USER=eve_srp_user
DB_PASSWORD=change_this_secure_password_456!
DB_NAME=eve_srp

# EVE SSO Configuration
SSO_CLIENT_ID=your_client_id_here
SSO_CLIENT_SECRET=your_client_secret_here
SSO_REDIRECT_URI=http://localhost:9000/auth

# Provider Configuration
PROVIDER=EveSrp\Provider\Implementation\EsiProvider
ROLE_GLOBAL_ADMIN=global-admin

# Application Settings
APP_ENV=prod
SESSION_SECURE=0
REQUIRE_GROUP=false

# Customization
APP_TITLE=Ship Replacement Program
APP_LOGO=/static/logo-srp.png
APP_LOGO_ALT=SRP Logo
HTTP_USER_AGENT=EVE-SRP (https://github.com/tkhamez/eve-srp)
ZKILLBOARD_URL=https://zkillboard.com

# Modifier Calculation
MODIFIER_CALCULATION=sequentially

# Optional Texts
LOGIN_HINT=
FOOTER_TEXT=
SUBMIT_DETAILS_PLACEHOLDER=
SUBMIT_DETAILS_HELP=

# Neucore Provider (if using NeuCoreProvider)
# Only needed if PROVIDER=EveSrp\Provider\Implementation\NeucoreProvider
NEUCORE_DOMAIN=https://your-neucore-domain.example.com
NEUCORE_APP_ID=your_neucore_app_id
NEUCORE_APP_SECRET=your_neucore_app_secret

# ESI Provider - Group Configuration
# Comma-separated list of EVE IDs (Character IDs, Corporation IDs, Alliance IDs)
# You can find these IDs using: https://evewho.com or https://esi.evetech.net/ui/

# Alliances and corporations that can submit requests
ESI_SUBMITTER_ALLIANCES=
ESI_SUBMITTER_CORPORATIONS=

# Characters and corporations that can review requests
ESI_REVIEW_CHARACTERS=
ESI_REVIEW_CORPORATIONS=

# Characters and corporations that can pay requests
ESI_PAY_CHARACTERS=
ESI_PAY_CORPORATIONS=

# Admin characters
ESI_ADMIN_CHARACTERS=

# Global admin characters (full access)
ESI_GLOBAL_ADMIN_CHARACTERS=

