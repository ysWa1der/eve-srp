# ============================================
# EVE-SRP Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!
# ============================================

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
DB_ROOT_PASSWORD=eve_srp
DB_USER=eve_srp
DB_PASSWORD=eve_srp
DB_NAME=eve_srp

# ----------------------------------------------
# EVE SSO Configuration
# ----------------------------------------------
# Register your application at: https://developers.eveonline.com/
SSO_CLIENT_ID=your_client_id_here
SSO_CLIENT_SECRET=your_client_secret_here
SSO_REDIRECT_URI=http://localhost:9000/auth

# ----------------------------------------------
# Provider Configuration
# ----------------------------------------------
PROVIDER=EveSrp\Provider\Implementation\EsiProvider
ROLE_GLOBAL_ADMIN=global-admin

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
APP_ENV=prod
SESSION_SECURE=0
REQUIRE_GROUP=false

# ----------------------------------------------
# Customization
# ----------------------------------------------
APP_TITLE=Ship Replacement Program
APP_LOGO=/static/cloud-temple-logo.png
APP_LOGO_ALT=Cloud Temple
HTTP_USER_AGENT=EVE-SRP (https://github.com/tkhamez/eve-srp)
ZKILLBOARD_URL=https://zkillboard.com

# ----------------------------------------------
# Modifier Calculation
# ----------------------------------------------
# Options: sequentially, absolute_first, relative_first
MODIFIER_CALCULATION=sequentially

# ----------------------------------------------
# Optional Texts
# ----------------------------------------------
LOGIN_HINT=
FOOTER_TEXT=
SUBMIT_DETAILS_PLACEHOLDER=
SUBMIT_DETAILS_HELP=

# ----------------------------------------------
# Neucore Provider (if using NeuCoreProvider)
# ----------------------------------------------
NEUCORE_DOMAIN=https://neucore.tian-space.net
NEUCORE_APP_ID=
NEUCORE_APP_SECRET=

# ----------------------------------------------
# ESI Provider - Group Configuration
# ----------------------------------------------
# Comma-separated list of EVE IDs

# Alliances and corporations that can submit requests
ESI_SUBMITTER_ALLIANCES=
ESI_SUBMITTER_CORPORATIONS=98294509

# Characters and corporations that can review requests
ESI_REVIEW_CHARACTERS=2114345170,2115846759,95576906,2114623586,96189332
ESI_REVIEW_CORPORATIONS=

# Characters and corporations that can pay requests
ESI_PAY_CHARACTERS=2114345170,2115846759
ESI_PAY_CORPORATIONS=

# Admin characters
ESI_ADMIN_CHARACTERS=2114345170,96541111

# Global admin characters
ESI_GLOBAL_ADMIN_CHARACTERS=1200044965,2114345170

# ----------------------------------------------
# Docker Image (for production deployment)
# ----------------------------------------------
# DOCKER_IMAGE=youruser/eve-srp:latest
